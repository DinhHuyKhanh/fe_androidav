<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    android:background="@color/background"
    tools:context=".activities.DanhSachXe">

    <TextView
        android:id="@+id/dsx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Danh sách xe"
        android:layout_marginTop="25dp"
        android:textColor="@color/nsct_color"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/lsgx_iv_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/img_return_white"
        android:onClick="onlick_dsx_return"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="87dp"
        android:background="@drawable/rectangle_1_shape"/>

    <TextView
        android:id="@+id/dsx_tv_so_luong_xe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Số lượng xe: 0"
        android:layout_marginTop="100dp"
        android:layout_marginRight="40dp"
        android:textSize="18dp" />

    <ListView
        android:id="@+id/dsx_listViewCar"
        android:layout_width="match_parent"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="21dp"
        android:layout_height="match_parent"/>
</RelativeLayout>