<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    android:background="@color/background"
    tools:context=".activities.ThongBao">

    <TextView
        android:id="@+id/thong_bao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thông báo"
        android:layout_marginTop="32dp"
        android:textColor="@color/nsct_color"
        android:textSize="25dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/rectangle_black"
        android:layout_alignParentBottom="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/rectangle_1_shape"/>

    <ListView
        android:id="@+id/list_view_thong_bao"
        android:layout_width="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="90dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/thong_bao_iv_trang_chu"
        android:layout_width="95dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="12dp"
        android:onClick="on_click_thong_bao_trang_chu"
        android:src="@drawable/trang_chu_toi" />

    <ImageView
        android:id="@+id/thongbao_iv_thong_bao"
        android:layout_width="77dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="173dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/thong_bao_white" />

    <ImageView
        android:id="@+id/thongbao_iv_tai_khoan"
        android:layout_width="69dp"
        android:layout_height="51dp"
        android:src="@drawable/tai_khoan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:onClick="on_click_thong_bao_tai_khoan"/>
</RelativeLayout>