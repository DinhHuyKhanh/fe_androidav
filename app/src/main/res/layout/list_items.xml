<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/expandedListItems_tenGiaoDich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="10dp"
        android:text="Thanh toán tiền gửi xe"
        android:textSize="17dp"
        android:textColor="@color/color_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/expandedListItems_coin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/expandedListItems_tenGiaoDich"
        android:paddingTop="10dp"
        android:textSize="17dp"
        android:textColor="@color/color_text"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:gravity="end"
        android:paddingRight="?android:attr/expandableListPreferredChildPaddingLeft"
        android:text="-30.000đ"/>

    <TextView
        android:id="@+id/expandedListItems_ngayGiaoDich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:text="19:17:08 - 19/02/2023"
        android:layout_below="@+id/expandedListItems_tenGiaoDich"
        android:textSize="14dp"
        android:textColor="@color/color_text"/>

    <TextView
        android:id="@+id/expandedListItems_soDuVi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:text="Số dư ví: "
        android:textSize="14dp"
        android:layout_below="@id/expandedListItems_ngayGiaoDich"
        android:textColor="@color/color_text" />

    <TextView
        android:id="@+id/expandedListItems_setSoDuVi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="54.000đ"
        android:textSize="14dp"
        android:layout_below="@id/expandedListItems_ngayGiaoDich"
        android:layout_toRightOf="@id/expandedListItems_soDuVi"
        android:textColor="@color/color_text" />
</RelativeLayout>